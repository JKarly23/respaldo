<!-- Filtros activos -->
<!-- Wrapper para mostrar los filtros activos -->
<div id="filtrosActivosWrapper" class="mb-3" style="display: none;">
    <div class="card border shadow-sm rounded">
        <div class="card-header bg-light py-2 d-flex justify-content-between align-items-center">
            <strong class="mb-0 text-muted">Filtros activos</strong>
            <button id="toggleFiltrosActivos" class="btn btn-sm btn-outline-secondary" title="Mostrar/ocultar filtros">
                <i class="fas fa-chevron-up"></i>
            </button>
        </div>
        
        <div id="filtrosActivos" class="d-flex flex-wrap align-items-start p-3" style="max-width: 100%; overflow-x: auto; white-space: nowrap;">
            <!-- Aquí se agregarán dinámicamente los filtros activos -->
        </div>
    </div>
</div>

<style>
.filtros-colapsado {
    max-height: 0;
    overflow: hidden;
    padding: 0;
    transition: max-height 0.3s ease;
}

#filtrosActivos {
    max-width: 100%; /* Asegura que el contenedor no crezca más allá del 100% del ancho disponible */
    overflow-x: auto; /* Habilita desplazamiento horizontal si el contenido es largo */
    white-space: nowrap; /* Impide que el texto se divida en varias líneas */
}

.card-body {
    padding: 0.75rem;
}
</style>

{% block javascripts %}
    <script type="module" src="{{ asset('assets/js/components/filtros/main.js') }}"></script>
{% endblock %}
